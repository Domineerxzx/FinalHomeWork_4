<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tts.finalhomework_4">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".activities.UserInfoActivity"
            android:label="@string/title_activity_user_info" />
        <activity
            android:name=".activities.SearchActivity"
            android:label="@string/title_activity_search" />
        <activity
            android:name=".activities.ReadandDiscussActivity"
            android:label="@string/title_activity_read_and__discuss" />
        <activity
            android:name=".activities.DiscussNewsActivity"
            android:label="@string/title_activity_discuss" />
        <activity
            android:name=".activities.PlayActivity"
            android:label="@string/title_activity_play" />
        <activity
            android:name=".activities.DiscussLiveActivity"
            android:label="@string/title_activity_discuss_live"></activity>
    </application>

</manifest>