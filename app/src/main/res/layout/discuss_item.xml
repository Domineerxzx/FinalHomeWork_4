<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/discuss_item">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/user_head"
            android:id="@+id/iv_user_head"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_nickname"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="discuss_time"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_discuss_time"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="discuss_content"
        android:textSize="25sp"
        android:id="@+id/tv_discuss_content"
        android:layout_marginLeft="60dp"/>
    <include layout="@layout/activity_all_view"/>
</LinearLayout>